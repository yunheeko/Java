import java.util.Scanner;

public class TestscoresandGrade {
	private static Scanner scanner = new Scanner( System.in);
	public static void main(String[] args) {
	  System.out.println("Please type the first test score");
	  String in=scanner.nextLine();
	  int first=Integer.parseInt(in);
	  System.out.println("Please type the second test score");
	  String input=scanner.nextLine();
	  int second=Integer.parseInt(input);
	  System.out.println("Please type the third test score");
	  String inputt=scanner.nextLine();
	  int third=Integer.parseInt(inputt);
	  double average=(first+second+third)/3.0;
	  System.out.println("The average of three scores is "+ average);
	  if(average>=90)
		  System.out.println("The letter grade is A");
	  if((average>=80)&&(average<=89))
		  System.out.println("The letter grade is B");
	  if((average>=70)&&(average<=79))
		  System.out.println("The letter grade is C");
	  if((average>=60)&&(average<=69))
		  System.out.println("The letter grade is D");
	  if(average<60)
		  System.out.println("The letter grade is F");
	}
}
